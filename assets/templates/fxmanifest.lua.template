-- FiveM Resource Manifest Template
-- Copy this template and modify it for your resource
-- Documentation: https://docs.fivem.net/docs/scripting-reference/resource-manifest/

fx_version 'cerulean'
game 'gta5'

-- Resource Information
name '{{RESOURCE_NAME}}'
author '{{AUTHOR_NAME}}'
version '{{VERSION}}'
description '{{DESCRIPTION}}'

-- Optional: Repository URL
repository '{{REPOSITORY_URL}}'

-- Optional: Resource dependencies
-- dependencies {
--     'es_extended',  -- ESX Framework
--     'qb-core',      -- QB-Core Framework
--     'mysql-async',  -- Database
--     'menuapi'       -- Menu system
-- }

-- Shared scripts (run on both client and server)
shared_scripts {
    'config.lua',
    'shared/*.lua'
}

-- Server-side scripts
server_scripts {
    '@mysql-async/lib/MySQL.lua',  -- If using MySQL
    'server/*.lua'
}

-- Client-side scripts
client_scripts {
    'client/*.lua'
}

-- UI files (HTML, CSS, JS)
ui_page 'html/index.html'

files {
    'html/index.html',
    'html/style.css',
    'html/script.js',
    'html/assets/*'
}

-- Exports (functions other resources can call)
exports {
    'GetPlayerData',
    'SetPlayerData',
    'RegisterCallback'
}

-- Server exports
server_exports {
    'GetServerData',
    'SavePlayerData'
}

-- Client exports
client_exports {
    'GetClientData',
    'ShowNotification'
}

-- Data files (JSON, XML, etc.)
data_file 'DLC_ITYP_REQUEST' 'stream/props.ytyp'
data_file 'HANDLING_FILE' 'data/handling.meta'
data_file 'VEHICLE_METADATA_FILE' 'data/vehicles.meta'
data_file 'CARCOLS_FILE' 'data/carcols.meta'
data_file 'VEHICLE_VARIATION_FILE' 'data/carvariations.meta'

-- Resource files to include
files {
    'data/handling.meta',
    'data/vehicles.meta',
    'data/carcols.meta',
    'data/carvariations.meta',
    'stream/props.ytyp'
}

-- Lua 5.4 compatibility (optional)
lua54 'yes'

-- Use experimental features (optional)
use_experimental_fxv2_oal 'yes'

-- Provide additional information
provides {
    'chat',
    'spawnmanager'
}

-- Replace existing resources
replace 'chat'

-- Before/after loading order
before 'chat'
after 'spawnmanager'

-- Resource metadata
set_resource_info {
    name = '{{RESOURCE_NAME}}',
    author = '{{AUTHOR_NAME}}',
    version = '{{VERSION}}',
    description = '{{DESCRIPTION}}',
    url = '{{REPOSITORY_URL}}'
}

